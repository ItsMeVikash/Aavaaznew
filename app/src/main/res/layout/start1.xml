<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/black"
    tools:context="start.Start1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8D6Ca0"
            android:scaleType="fitXY"
            android:src="@drawable/start1is" />

        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:id="@+id/start"-->
        <!--android:background="@android:color/black"-->
        <!--android:layout_height="32dp"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginStart="0dp"-->
        <!--android:layout_marginBottom="0dp"-->
        <!--android:src="@drawable/start1" />-->
        <TextView
            android:id="@+id/next"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="NEXT"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#505078"
            android:textSize="24dp" />


        <RadioButton
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:buttonTint="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="197dp"
            android:id="@+id/radio"
            android:layout_height="wrap_content"
            />
        <RadioButton
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:buttonTint="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@id/radio"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content"
            />
        <RadioButton
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:buttonTint="#ffffff"
            android:checked="true"
            android:scaleX="1.4"
            android:scaleY="1.4"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/radio"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>